@model ShopProject.ViewModel.ProductListViewModel
@{
    ViewData["Title"] = "Shop";
}

<div class="container bg-white justify-content-center font-italic">
    <div class="row mt-5">
        <div class="col">
            <h2 class="text-dark font-italic font-weight-bold text-center">
                Geïnteresseerd In ons assortiment?
            </h2>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col mt-5">
            <div class="ml-5 text-dark font-italic" style="font-size: 20px">
                <p>
                    Ben jij nog op zoeken naar enkele badmintonschoenen, badmintonracketen of andere noodzakelijke badmintonspullen.
                    Neem gerust een kijkje in onze catalogus naar de artikelen die wij u kunnen aanbieden. Is het artikel waar u geïnteresseerd in bent op?
                    Geen zorgen Wij houden dit nauw in oog en zorgen dat de voorraad snel weer is bijgevuld!
                </p>

            </div>
        </div>
        <div class="col text-center mt-1 ">
            <img class="justify-content-center mb-5" src="~/images/ShopImageRacket.jpg" style="width:18rem; height:20rem;" />
        </div>
    </div>

    <h2 class="ml-2 mt-2">Producten</h2>

    <form asp-controller="Shop" asp-action="Search" method="get">
        <div class="form-action no-color">
            <p class="ml-2">
                Zoek Product:
                <input asp-for="ProductSearch" />
                <input type="submit" value="Zoeken" class="btn btn-default" />
                <a asp-controller="Shop" asp-action="KlantIndex">Terug naar volledige lijst</a>
            </p>
        </div>
    </form>

    <p class="ml-2 mt-2">
        @if (this.User.IsInRole("Admin"))
        {
            <a asp-action="Index">Productenlijst</a>
        }
    </p>
    <table class="mb-5">
        <thead>
            <tr>

                <th class="col-md-4">
                    @Html.DisplayNameFor(model => model.Producten[0].Naam)
                </th>
                <th class="col-md-4">
                    @Html.DisplayNameFor(model => model.Producten[0].Prijs)
                </th>
                <th class="col-md-4">
                    @Html.DisplayNameFor(model => model.Producten[0].EenhedenInVoorraad)
                </th>
            </tr>
        </thead>
        <tbody class="justify-content-center">
            @foreach (var item in Model.Producten)
            {
                <tr>

                    <td class="col-md-4">
                        @item.Naam
                    </td>
                    <td class="col-md-4">
                        @item.Prijs
                    </td>
                    <td class="col-md-4">
                        @item.EenhedenInVoorraad
                    </td>
                    <td class="col-md-4">
                        @if (this.User.Identity.IsAuthenticated)
                        {
                            <a asp-action="Detail" asp-route-id="@item.productId">Detail</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
    <div class="bg-white mt-5 mb-5">
        <div class="row"></div>
    </div>
</div>