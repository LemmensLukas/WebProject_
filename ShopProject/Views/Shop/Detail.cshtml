@model ShopProject.ViewModel.DetailProductViewModel
@{
    ViewData["Title"] = "Detail";
}
<div class="container bg-secondary justify-content-center font-italic">
    <div class="text-center">
        <h1>Detail</h1>
        <h2>Bestel @Model.Naam?</h2>
        <h4>Product</h4>
        <hr />
        <div class="row justify-content-center">
            <div class="col-md-4">
                <form>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Naam" class="control-label"></label>
                        : @Model.Naam
                        <span asp-validation-for="Naam" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Prijs" class="control-label"></label>
                        : @Model.Prijs
                        <span asp-validation-for="Prijs" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="productBeschrijving" class="control-label"></label>
                        : @Model.productBeschrijving
                        <span asp-validation-for="productBeschrijving" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EenhedenInVoorraad" class="control-label"></label>
                        : @Model.EenhedenInVoorraad
                        <span asp-validation-for="EenhedenInVoorraad" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Aantal: </label>
                        <input />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Bestel" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        <div>
            <a asp-action="KlantIndex">Back to list</a>
        </div>
    </div>
</div>